{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "8.1.1",
    "npm": "5.0.3"
  },
  "scripts": {
    "start": "node start.js",
    "server": "nodemon start.js",
    "client":"cd client && yarn start",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false cd client && npm install --only=dev && npm install && npm run build"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "body-parser": "~1.13.2",
    "concurrently": "^3.5.1",
    "cookie-parser": "~1.3.5",
    "express": "~4.13.1",
    "jsonwebtoken": "^8.1.0",
    "md5": "^2.2.1",
    "mongoose": "^4.13.7",
    "morgan-body": "^2.0.2",
    "nodemon": "^1.14.3",
    "validator": "^9.2.0"
  }
}
